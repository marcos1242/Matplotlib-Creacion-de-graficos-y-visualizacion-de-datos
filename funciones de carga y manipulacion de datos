import pandas as pd
import geopandas as gpd
import matplotlib.pyplot as plt

from config import facultades_path, shapefile_path

def carga_facultades():
  df = pd.read_excel(facultades_path)
  df_publicas = df[df['regimen'] == 'PÃºblico']
  return df_publicas

def carga_shapefile():
  mapa_CABA = gpd.read_file(shapefile_path)
  return mapa_CABA

def crear_geodataframe(df_publicas):
  gdf_publicas = gpd.GeoDataFrame(df_publicas, geometry = gpd.points_from_xy(df_publicas['long'], df_publicas['lat']),  crs="EPSG:4326")
  return gdf_publicas
  
  
